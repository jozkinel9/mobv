<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="nasmodel"
            type="com.example.zadanie.ui.viewModels.HomeViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TODO: 1. prerobit na databinding -->
        <EditText
            android:id="@+id/word_input"
            android:text="@={nasmodel.inputText}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@id/word_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/word_btn"
            android:text="Save"
            android:onClick="@{() -> nasmodel.changeWord()}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/word_input"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/words_text"
            android:text="@{nasmodel.word}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/word_input" />

        <!-- TODO: 6. umoznit navigaciu do DatabaseFragmentu po stlaceni tlacidla -->

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>